<entities>
  <% @records_doctor.each do |doctor, records| %>
  <doctor>
    <name>
      <%= doctor.name %>
    </name>
    <surname>
      <%= doctor.surname %>
    </surname>
    <patronymic>
      <%= doctor.patronymic %>
    </patronymic>
    <post>
      <%= doctor.post.name %>
    </post>
    <records>
      <% records.each do |record| %>
        <record>
        <% if record.surname == 'none' %>
          <%= record.description %>
        <% else %>
          <%= record.surname %> <%= record.card %>
        <% end %>
        </record>
      <% end %>
    </records>
  </doctor>
  <% end %>
</entities>
