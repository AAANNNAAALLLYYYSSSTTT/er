<h1>Listing doctors</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Name</th>
      <th>Patronymic</th>
      <th>Post</th>
      <th>Cabinet</th>
      <th>Description</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.surname %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.patronymic %></td>
        <td><%= doctor.post.name %></td>
        <td><%= doctor.cabinet %></td>
        <td><%= doctor.description %></td>
        <td><%= doctor.status.name %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

