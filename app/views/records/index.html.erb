<h1>Listing records</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Surname</th>
      <th>Name</th>
      <th>Patronymic</th>
      <th>Card</th>
      <th>Doctor</th>
      <th>Description</th>
      <th>Year</th>
      <th>Month</th>
      <th>Day</th>
      <th>Hour</th>
      <th>Minute</th>
      <th>Flag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.account.name %></td>
        <td><%= record.surname %></td>
        <td><%= record.name %></td>
        <td><%= record.patronymic %></td>
        <td><%= record.card %></td>
        <td><%= record.doctor.surname %></td>
        <td><%= record.description %></td>
        <td><%= record.year %></td>
        <td><%= record.month %></td>
        <td><%= record.day %></td>
        <td><%= record.hour %></td>
        <td><%= record.minute %></td>
        <td><%= record.flag.name %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

